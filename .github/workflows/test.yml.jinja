name: test Odoo addons

on:
  pull_request:
  push:
    branches:
      - "{{ odoo_version }}"
      - "{{ odoo_version }}-ocabot*"

{%
set IMAGES = {
  "14.0": "ghcr.io/sbidoul/oca-ci/py3.6-odoo14.0:latest",
  "13.0": "ghcr.io/sbidoul/oca-ci/py3.6-odoo13.0:latest",
  "12.0": "ghcr.io/sbidoul/oca-ci/py3.6-odoo12.0:latest",
  "11.0": "ghcr.io/sbidoul/oca-ci/py3.5-odoo11.0:latest",
}
-%}
jobs:
  test:
    runs-on: ubuntu-latest
    container: {{ IMAGES[odoo_version] }}
    services:
      postgres:
        image: postgres:9.6
        env:
          POSTGRES_USER: odoo
          POSTGRES_PASSWORD: odoo
          POSTGRES_DB: odoo
        ports:
          - 5432:5432
        # needed because the postgres container does not provide a healthcheck
        options:
          --health-cmd pg_isready --health-interval 10s --health-timeout 5s
          --health-retries 5
    steps:
      - uses: actions/checkout@v1
      - run: oca_install_addons
      - run: oca_init_test_database
      - run: oca_run_tests
      - uses: codecov/codecov-action@v1
      - name: Export translations (.pot)
        run: |
          pip install click-odoo-contrib
          click-odoo-makepot -d odoo --msgmerge-if-new-pot --commit
          # TODO push changes
          git diff
